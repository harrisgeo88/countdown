{
  "name": "countdown-node",
  "version": "1.0.0",
  "description": "Terminal countdown timer",
  "main": "src/index.js",
  "author": "Harris Geo",
  "license": "MIT",
  "private": true,
  "scripts": {
    "countdown": "node -r esm ./src/index.js",
