    "test:coverage": "yarn test --coverage --colors",
    "format": "prettier --write *.js"
  },
  "dependencies": {
    "babel-preset-env": "^1.7.0",
    "esm": "^3.2.22"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11",
    "prettier": "^1.17.0"
  }
}
